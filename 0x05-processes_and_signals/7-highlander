#!/usr/bin/env bash
# This script displays "To infinity and beyond" indefinitely and handles SIGTERM without terminating.

# Trap SIGTERM (signal 15) to print "I am invincible!!!"
# The 'trap' command allows a script to execute a command when a signal is received.
trap 'echo "I am invincible!!!"' SIGTERM

# Infinite loop to continuously display the phrase
while true; do
    echo "To infinity and beyond"
    sleep 2
done
